---
interface Props {
  title: string;
  description: string;
  year: string;
  linkTo:string;
  secondaryText?: string;
  className?: string;
}

const {
  title,
  description,
  year,
  linkTo,
  secondaryText = "view this project",
  className = "",
} = Astro.props;
---

<div class={`Card ${className}`}>
  <h5 class="heading-one">{title}</h5>
  <span class="heading-three">
    {year}
  </span>
  <p class="paragraph">
    {description}
  </p>
  <a href={linkTo} class="links">
    {secondaryText}
    <span> â†’</span>
  </a>
</div>

<style>
  .Card {
    display: flex;
    flex-direction: column;
    background-color: var(--bg-color-1);
    border-radius: 20px;
    padding: 20px;
    transition: box-shadow 0.5s;

    &:hover {
      box-shadow: 0px 8px 4px 0px rgba(37, 37, 37, 0.1);
    }
  }
</style>
